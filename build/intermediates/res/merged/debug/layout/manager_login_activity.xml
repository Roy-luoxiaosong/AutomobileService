<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:roy = "http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.roy.automobileservice.layout.TitleBackLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
    </com.roy.automobileservice.layout.TitleBackLayout>

    <com.roy.automobileservice.layout.ViewPagerIndicator
        android:id="@+id/id_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg"
        roy:visible_tab_count="3"
        android:orientation="horizontal">
    </com.roy.automobileservice.layout.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_manager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
</LinearLayout>