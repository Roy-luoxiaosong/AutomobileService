<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false" 
    style="@style/match_parent"
    android:background="@color/menu_background_color"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/emergency_tel_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="2"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       	android:gravity="center"
       	android:orientation="vertical">
       	<LinearLayout
       	    android:id="@+id/Rescue_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form1">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	        style="@style/wrap_content"
       	       />
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/tel_120"/>
       	</LinearLayout>
       	<LinearLayout
       	    android:id="@+id/police_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form4">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	       	style="@style/wrap_content"/>"
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/tel_110"/>
       	</LinearLayout>
   	</LinearLayout>
   	
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       	android:gravity="center"
       	android:orientation="vertical">
       	<LinearLayout
       	    android:id="@+id/traffic_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form2">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	        style="@style/wrap_content"/>
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/tel_122"/>
       	</LinearLayout>
       	<LinearLayout
       	    android:id="@+id/fire_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form5">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	         style="@style/wrap_content"/>
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/tel_119"/>
       	</LinearLayout>
   	</LinearLayout>
   	</LinearLayout>
   	<TextView
   	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
   	     android:textSize="24sp"
   	     android:text="@string/convenient_tel_text"/>
  	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       	android:gravity="center"
       	android:orientation="vertical">
       	<LinearLayout
       	    android:id="@+id/road_help_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form3">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	         style="@style/wrap_content"/>
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/road_assis_tel"/>
       	</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       	android:gravity="center"
       	android:orientation="vertical">
       	<LinearLayout
       	    android:id="@+id/customer_service_tel"
       	    style="@style/menu_button_style"
       	    android:background="@drawable/button_form6">
       	    <ImageView
       	        android:background="@drawable/road_assistant_option_bg"
       	         style="@style/wrap_content"/>
       	    <TextView
       	        style="@style/menu_text_style"
       	        android:text="@string/customer_service"/>
       	</LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
