<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.roy.automobileservice.layout.TitleBackLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
    </com.roy.automobileservice.layout.TitleBackLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/select_car"/>
        <Spinner
            android:id="@+id/select_car"
            android:layout_height="45dp"
            android:background="@drawable/login_edittext_style"
            style="@style/match_wrap_group"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/select_car_detail"/>
        <Spinner
            android:id="@+id/select_car_detial"
            android:layout_height="45dp"
            android:background="@drawable/login_edittext_style"
            style="@style/match_wrap_group"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/gou_che_jia_ge"/>
        <EditText
            android:id="@+id/select_car_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/gou_zhi_shui"/>
        <EditText
            android:id="@+id/gou_zhi_sui"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#242424"
        android:text="@string/gou_zhi_shui_detial"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/shang_pai_fei_yong"/>
        <EditText
            android:id="@+id/shang_pai_fei_yong"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:textColor="#242424"
        android:text="@string/shang_pai_fei_yong_detial"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/che_chuan_shi_yong_fei"/>
        <EditText
            android:id="@+id/che_chuan_shi_yong_sui"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#242424"
        android:text="@string/che_chuan_shi_yong_fei_detial"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/jiao_qiang_shui"/>
        <EditText
            android:id="@+id/jiao_qiang_sui"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#242424"
        android:text="@string/jiao_qiang_shui_detail"/>
        </LinearLayout>
    </ScrollView>
    <TableRow
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_size_style"
            android:text="@string/zong_hua_fei"/>
        <EditText
            android:id="@+id/zong_hua_fei"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:textSize="24sp"
            android:textColor="#FF0000"
            android:background="@drawable/login_edittext_style"
            android:maxLength="20"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/reset_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/reset_data"
            android:background="@drawable/tel_button_from2"/>
        <Button
            android:id="@+id/buy_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/buy_car"
            android:background="@drawable/tel_button_from2"/>
    </LinearLayout>

</LinearLayout>
