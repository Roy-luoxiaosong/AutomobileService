<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/visibility_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


<!--		<fragment
			android:id="@+id/car_pictures"
			android:name="com.roy.automobileservice.layout.PictureSwitcherFragment"
			android:layout_width="match_parent"
			android:layout_height="180dp"/>"-->

        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="30dp" 
        	android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/base_info"
            android:textSize="20sp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
        	<Button
            	android:id="@+id/cal_for_more_info"
            	android:layout_width="0dp"
				android:layout_weight="1"
            	android:layout_height="wrap_content"
            	android:drawableRight="@drawable/card_phone"
            	android:background="@drawable/tel_button_from2"
				android:layout_margin="5dp"
            	android:text="@string/cal_for_more_info_tel"/>
			<Button
				android:id="@+id/car_calculator"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:background="@drawable/tel_button_from2"
				android:text="@string/car_calculator"/>
		</LinearLayout>
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="30dp" 
        	android:background="#ffffff"/>
       	<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_discribe"
            android:textSize="20sp"/>
       	<TextView
       	    android:id="@+id/car_discribe_info"
			android:layout_margin="10dp"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>
