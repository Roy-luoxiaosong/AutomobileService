<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
         <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#1C86EE" 
                android:centerColor="#1E90FF"
                android:endColor="#1C86EE"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#DBDBDB"/>
            <corners android:radius="3dp"/>

         </shape>
    </item>
    <item>
       <shape>
            <gradient android:startColor="#4682B4"
                android:centerColor="#4876FF"
                android:endColor="#4682B4"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#ffffff"/>
            <corners android:radius="3dp"/>

         </shape> 
    </item>

</selector>
