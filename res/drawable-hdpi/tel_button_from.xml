<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#CD0000" 
                android:centerColor="#CD4F39"
                android:endColor="#CD0000"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#DBDBDB"/>
            <corners android:radius="5dp"/>
            <padding android:left="5dp" android:top="5dp"
                android:right="5dp" android:bottom="5dp"/>
         </shape>
    </item>
    <item>
       <shape>
            <gradient android:startColor="#4682B4"
                android:centerColor="#4876FF"
                android:endColor="#4682B4"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#ffffff"/>
            <corners android:radius="8dp"/>
            <padding android:left="5dp" android:top="5dp"
                android:right="5dp" android:bottom="5dp"/>
         </shape> 
    </item>

</selector>
