<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
       <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#1C86EE" 
                android:centerColor="#1E90FF"
                android:endColor="#1C86EE"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="@color/menu_background_color"/>
            <corners android:radius="5dp"/>
            <padding android:left="5dp" android:top="5dp"
                android:right="5dp" android:bottom="5dp"/>
         </shape>
    </item>
    <item>
       <shape>
            <gradient android:startColor="@color/menu_background_color"
                android:centerColor="@color/menu_background_color"
                android:endColor="@color/menu_background_color"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="@color/menu_background_color"/>
            <corners android:radius="0dp"/>
            <padding android:left="5dp" android:top="0dp"
                android:right="5dp" android:bottom="0dp"/>
         </shape> 
    </item>
</selector>
