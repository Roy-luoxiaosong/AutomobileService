                    style="@style/CustomCheckboxTheme"
                    android:textSize="20sp"
                    android:text="@string/checkbox_10"
                    android:layout_margin="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkbox_11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/CustomCheckboxTheme"
                    android:textSize="20sp"
                    android:text="@string/checkbox_11"
                    android:layout_margin="10dp"/>
                <CheckBox
                    android:id="@+id/checkbox_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/CustomCheckboxTheme"
                    android:textSize="20sp"
                    android:text="@string/checkbox_12"
                    android:layout_margin="10dp"/>
            </TableRow>
            <CheckBox
                android:id="@+id/checkbox_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomCheckboxTheme"
                android:textSize="20sp"
                android:text="@string/checkbox_13"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submit_beauty_request"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_margin="10dp"
        android:background="@drawable/login_btn_shape"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="@string/submit_beauty_request"
        />
</LinearLayout>
