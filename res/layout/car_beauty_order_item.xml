<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableRow
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#88000000"
            android:text="@string/order_user_name"/>
        <TextView
            android:id="@+id/order_beauty_user_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="用户名"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#88000000"
            android:text="美容项目："/>
        <TextView
            android:id="@+id/order_beauty_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="汽车打油"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#88000000"
            android:text="@string/order_state"/>
        <TextView
            android:id="@+id/order_beauty_state_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="提交成功"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#88000000"
            android:text="@string/order_complete_time"/>
        <TextView
            android:id="@+id/order_beauty_complete_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="2016-6-5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#88000000"
            android:text="@string/order_handle_staff_name"/>
        <TextView
            android:id="@+id/order_beauty_handle_staff_name_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="员工1"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/order_beauty_btn"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_margin="5dp"
        android:background="@drawable/login_btn_shape"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="@string/order_dispatch_order_btn"
        />
</LinearLayout>