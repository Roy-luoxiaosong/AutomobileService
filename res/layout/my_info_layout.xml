<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.roy.automobileservice.layout.AvatarImageView
      android:id="@+id/my_info_haha_avatar_img"
      android:layout_margin="30dp"
      android:layout_width="96dip"
      android:layout_height="96dip"
      android:layout_gravity="center"
      android:src="@drawable/user_default_icon1"  
      />
    <ListView
      android:id="@+id/info_item"
      android:background="@drawable/info_item_from"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>
    <Button
        android:layout_width="300dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="@string/reset_user_info"
        android:background="#773A5FCD"/>
</LinearLayout>
